<body>
    <script>
      let i = 1;
      while (i <= 5) {
        console.log(i);
        i = i +1; // every time it loops it will add +1 and eventually 1<=5 will be fake, so the loop will stop 
      }
     
      for (let i = 1; i<=5; i++) { // variavel, condição. incremento
        console.log(i);

      }

     // para criar um loop inconvenviconal, como um loop que quer chegar ate 0.5 se usa while
      let randomNumber = 0;
      while (randomNumber < 0.5) {
        randomNumber = Math.random();
      }
      console.log(randomNumber);
    </script>
</body>
